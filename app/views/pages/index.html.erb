<%= render partial: "shared/header" %>
<%= render partial: "shared/search_bar" %>


<div class="container-xxl py-5">
  <div class="container">
    <div class="row g-0 gx-5 align-items-end">
      <div class="col-lg-6">
        <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
          <h1 class="mb-3">Property Listing</h1>
        </div>
      </div>
    </div>
    <div class="tab-content">
      <div id="featured" class="tab-pane fade show p-0 active">
        <div class="row g-4">
          <% Property.featured.each do |property| %>
            <div class="col-lg-4 col-md-6">
              <div class="property-item rounded overflow-hidden">
                <div class="position-relative overflow-hidden">
                  <a href=""><img class="img-fluid" src="<%= asset_path "property-1.jpg" %>" alt=""></a>
                  <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3"><%= property.status.titleize %>
                  </div>
                  <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">
                    <%= property.property_type.titleize %></div>
                </div>
                <div class="p-4 pb-0">
                  <h5 class="text-primary mb-3">$12,345</h5>
                  <a class="d-block h5 mb-2" href="">Golden Urban House For Sell</a>
                  <p><i class="fa fa-map-marker-alt text-primary me-2"></i>123 Street, New York, USA</p>
                </div>
                <div class="d-flex border-top">
                  <small class="flex-fill text-center border-end py-2"><i
                      class="fa fa-ruler-combined text-primary me-2"></i>1000 Sqft</small>
                  <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>3
                    Bed</small>
                  <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>2 Bath</small>
                </div>
              </div>
            </div>
          <% end %>

          <div class="col-12 text-center">
            <%= link_to "Browse More Property", properties_path, class: "btn btn-primary py-3 px-5" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-xxl py-5">
  <div class="container">
    <div class="bg-light rounded p-3">
      <div class="bg-white rounded p-4" style="border: 1px dashed rgba(0, 185, 142, .3)">
        <div class="row g-5 align-items-center">
          <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
            <img class="img-fluid rounded w-100" src="<%= asset_path "call-to-action.jpg" %>" alt="">
